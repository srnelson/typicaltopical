                          },
                          {
                            "when": "${@viewportShape == @viewportShapeRound}",
                            "type": "Text",
                            "fontSize": "12dp",
                            "paddingLeft": "1vw",
                            "text": "<i>Detected:</i><br>${detectedValues.detectedEmotion}"
                          },
                          {
                            "when": "${@viewportShape != @viewportShapeRound}",
                            "type": "Text",
                            "textAlign": "right",
                            "text": "${detectedValues.emotionIcon}"
                          },
                          {
                            "when": "${@viewportShape == @viewportShapeRound}",
                            "type": "Text",
                            "textAlign": "right",
                            "fontSize": "18dp",
                            "text": "${detectedValues.emotionIcon}"
                          }
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        ]
      }
    ]
  }
}
